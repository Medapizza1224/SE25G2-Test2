mysql -h mysql -P 3306 -u root -p password restaurant_db -e "SELECT p.payment_completed_at AS 日時, u.user_name AS ユーザー, (SELECT SUM(price * quantity) FROM order_items WHERE order_id = p.order_id) AS 金額, p.earned_points AS 獲得P FROM payments p JOIN users u ON p.user_id = u.user_id ORDER BY p.payment_completed_at DESC;"


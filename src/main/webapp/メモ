echo "--- DB2 ---" && \
mysql -h db2 -P 3306 -u root -proot restaurant_db -N -e "SELECT COUNT(*) FROM ledger;" && \
echo "--- DB3 ---" && \
mysql -h db3 -P 3306 -u root -proot restaurant_db -N -e "SELECT COUNT(*) FROM ledger;"